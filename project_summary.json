  "api_endpoints": {
    "total_endpoints": 25,
    "main_server_endpoints": [
      {
        "method": "GET",
        "endpoint": "/",
        "description": "WebSocket demo page with real-time testing",
        "auth_required": false
      },
      {
        "method": "GET", 
        "endpoint": "/api/health",
        "description": "Server health check with WebSocket status",
        "auth_required": false
      },
      {
        "method": "GET",
        "endpoint": "/api/phones/:id", 
        "description": "Get phone details by ID from JSON database",
        "auth_required": false,
        "features": ["404 handling", "JSON database", "Metadata"]
      },
      {
        "method": "GET",
        "endpoint": "/api/search",
        "description": "Search phones with filters from JSON database", 
        "auth_required": false,
        "query_params": ["q", "category", "brand", "minPrice", "maxPrice"]
      },
      {
        "method": "GET",
        "endpoint": "/api/featured",
        "description": "Get featured/recommended phones",
        "auth_required": false
      },
      {
        "method": "GET", 
        "endpoint": "/api/categories",
        "description": "Get phone categories",
        "auth_required": false
      },
      {
        "method": "GET",
        "endpoint": "/api/brands", 
        "description": "Get phone brands",
        "auth_required": false
      },
      {
        "method": "POST",
        "endpoint": "/api/phones",
        "description": "Create new phone with WebSocket broadcast",
        "auth_required": false
      },
      {
        "method": "PUT", 
        "endpoint": "/api/phones/:id",
        "description": "Update phone with WebSocket broadcast",
        "auth_required": false
      },
      {
        "method": "DELETE",
        "endpoint": "/api/phones/:id",
        "description": "Delete phone with WebSocket broadcast", 
        "auth_required": false
      },
      {
        "method": "POST",
        "endpoint": "/api/compare",
        "description": "Compare multiple phones",
        "auth_required": false
      },
      {
        "method": "POST",
        "endpoint": "/api/notifications",
        "description": "Send real-time notifications via WebSocket",
        "auth_required": false
      },
      {
        "method": "POST", 
        "endpoint": "/api/price-update",
        "description": "Broadcast price updates via WebSocket",
        "auth_required": false
      },
      {
        "method": "POST",
        "endpoint": "/api/stock-update",
        "description": "Broadcast stock updates via WebSocket",
        "auth_required": false
      },
      {
        "method": "POST",
        "endpoint": "/api/broadcast", 
        "description": "Send custom messages to all WebSocket clients",
        "auth_required": false
      }
    ],
    
    "route_endpoints": {
      "tracking": [
        "POST /api/tracking/create",
