  "item": [
    {
      "name": "üì∑ Image Upload",
      "item": [
        {
          "name": "Upload Single Image",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Save response data for next requests",
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    const responseJson = pm.response.json();",
                  "    if (responseJson.image) {",
                  "        pm.environment.set('lastImageId', responseJson.image.id);",
                  "        pm.environment.set('lastImageFilename', responseJson.image.filename);",
                  "        pm.environment.set('lastImagePath', responseJson.image.path);",
                  "        pm.environment.set('lastPhoneId', responseJson.phone.id);",
                  "        ",
                  "        console.log('‚úÖ Image uploaded successfully!');",
                  "        console.log('üì± Phone ID:', responseJson.phone.id);",
                  "        console.log('üÜî Image ID:', responseJson.image.id);",
                  "        console.log('üìÅ Filename:', responseJson.image.filename);",
                  "        console.log('üîó Path:', responseJson.image.path);",
                  "        console.log('');",
                  "        console.log('üéØ Next steps:');",
                  "        console.log('1Ô∏è‚É£ Use: GET /api/images/phone/' + responseJson.phone.id);",
                  "        console.log('2Ô∏è‚É£ View image: GET ' + responseJson.image.path);",
                  "        console.log('3Ô∏è‚É£ Or use the automated requests below!');",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "alt",
                  "value": "iPhone 15 Pro main image",
                  "type": "text"
                },
                {
                  "key": "isPrimary",
                  "value": "true",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/images/upload/iphone-15-pro",
              "host": ["{{baseUrl}}"],
              "path": ["api", "images", "upload", "iphone-15-pro"]
            },
            "description": "Upload a single image for a phone. The image will be stored and associated with the phone."
          }
        },
