              "mode": "raw",
              "raw": "{\n  \"alt\": \"Updated image description\",\n  \"isPrimary\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/images/{{lastPhoneId}}/{{lastImageId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "images", "{{lastPhoneId}}", "{{lastImageId}}"]
            },
            "description": "Update the last uploaded image metadata (uses environment variables)"
          }
        },
        {
          "name": "Delete Image",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/images/iphone-15-pro/{{imageId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "images", "iphone-15-pro", "{{imageId}}"]
            },
            "description": "Delete an uploaded image"
          }
        },
        {
          "name": "Delete Last Image (Auto)",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/images/{{lastPhoneId}}/{{lastImageId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "images", "{{lastPhoneId}}", "{{lastImageId}}"]
            },
            "description": "Delete the last uploaded image (uses environment variables)"
          }
        }
      ]
