    {
      "name": "üì± Get Images",
      "item": [
        {
          "name": "Get Phone Images",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/images/phone/iphone-15-pro",
              "host": ["{{baseUrl}}"],
              "path": ["api", "images", "phone", "iphone-15-pro"]
            },
            "description": "Get all uploaded images for a specific phone"
          }
        },
        {
          "name": "Get Phone Images (Auto - After Upload)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/images/phone/{{lastPhoneId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "images", "phone", "{{lastPhoneId}}"]
            },
            "description": "Get all uploaded images for the last uploaded phone (uses environment variable from upload)"
          }
        },
        {
          "name": "Get All Images",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/images/all?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "images", "all"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            },
            "description": "Get all uploaded images with pagination"
          }
        },
        {
          "name": "Get Image Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/images/stats",
              "host": ["{{baseUrl}}"],
              "path": ["api", "images", "stats"]
            },
            "description": "Get statistics about uploaded images"
          }
        },
        {
          "name": "View Uploaded Image",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/uploads/phones/iphone-15-pro-1736622791234.jpg",
              "host": ["{{baseUrl}}"],
              "path": ["uploads", "phones", "iphone-15-pro-1736622791234.jpg"]
            },
            "description": "View the actual uploaded image file. Replace filename with actual uploaded filename."
          }
        },
        {
          "name": "View Last Uploaded Image (Auto)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}{{lastImagePath}}",
              "host": ["{{baseUrl}}"],
              "path": ["{{lastImagePath}}"]
            },
            "description": "View the last uploaded image directly (uses environment variable from upload)"
          }
        }
      ]
    },
    {
      "name": "üîß Image Management",
      "item": [
        {
          "name": "Update Image Metadata",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"alt\": \"Updated image description\",\n  \"isPrimary\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/images/iphone-15-pro/{{imageId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "images", "iphone-15-pro", "{{imageId}}"]
            },
            "description": "Update image metadata like alt text and primary status"
          }
        },
